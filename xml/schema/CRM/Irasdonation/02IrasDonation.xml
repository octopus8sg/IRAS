<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Irasdonation</base>
  <class>IrasDonation</class>
  <name>civicrm_o8_iras_donation</name>
  <comment>IRAS Donation Reporting tool</comment>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique ID</comment>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>contribution_id</name>
    <type>int unsigned</type>
    <unique>TRUE</unique>
    <comment>FK to Contribution</comment>
  </field>
  <foreignKey>
    <name>contribution_id</name>
    <table>civicrm_contribution</table>
    <key>id</key>
    <onDelete>SET NULL</onDelete>
  </foreignKey>

  <field>
    <name>last_donation_log_id</name>
    <type>int unsigned</type>
    <required>false</required>
    <unique>false</unique>
    <comment>Last Iras Donation Log</comment>
  </field>

  <field>
    <name>created_date</name>
    <title>Created Date</title>
    <type>timestamp</type>
    <default>CURRENT_TIMESTAMP</default>
    <comment>When the response was first received</comment>
  </field>
  <index>
    <name>index_created_date</name>
    <fieldName>created_date</fieldName>
  </index>

</table>